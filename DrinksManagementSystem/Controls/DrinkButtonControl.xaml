<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converter="clr-namespace:DrinksManagementSystem.Converter;assembly=DrinksManagementSystem"
             x:Class="DrinksManagementSystem.Controls.DrinkButtonControl"
             x:Name="ThisDrinkButtonControl">
    <ContentView.Content>
        <Frame
            x:Name="outerFrame"
            WidthRequest="120"
            Margin="10"
            CornerRadius="30"
            HasShadow="False"
            Opacity="{Binding Source={x:Reference ThisDrinkButtonControl}, Path=Drink.Quantity, Converter={converter:ShowDrinkConverter}}"
            Style="{StaticResource SecondaryBackgroundStyle}"
        >
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnClicked"></TapGestureRecognizer>
            </Frame.GestureRecognizers>
            <StackLayout VerticalOptions="Center">
                <Frame
                    CornerRadius="50"
                    HeightRequest="100"
                    WidthRequest="100"
                    BackgroundColor="DarkGray"
                    HasShadow="False"
                    HorizontalOptions="Center"
                    IsClippedToBounds="True"
                    Padding="0"
                >
                    <Image
                        Margin="0"
                        Aspect="AspectFill"
                        x:Name="profileImage"
                    >
                        <Image.Source>
                            <FileImageSource File="{Binding Source={x:Reference ThisDrinkButtonControl}, Path=Drink.FullImagePath}" />
                        </Image.Source>
                    </Image>
                </Frame>

                <Label
                    Margin="0, 10, 0, 0"
                    HorizontalTextAlignment="Center"
                    FontAttributes="Bold"
                    FontSize="20"
                    Text="{Binding Source={x:Reference ThisDrinkButtonControl}, Path=Drink.Name}"
                >
                </Label>

                <Label
                    Margin="0, 0, 0, 0"
                    HorizontalTextAlignment="Center"
                    LineBreakMode="TailTruncation"
                    FontAttributes="Bold"
                    FontSize="12"
                    Text="{Binding Source={x:Reference ThisDrinkButtonControl}, Path=Drink.Brand.Name}"
                >
                </Label>

                <Label
                    x:Name="priceLabel"
                    Margin="0, 0, 0, 0"
                    HorizontalTextAlignment="Center"
                    LineBreakMode="TailTruncation"
                    FontAttributes="Bold"
                    Opacity="0.5"
                    Text="{Binding Source={x:Reference ThisDrinkButtonControl}, Path=Drink.Price, Converter={converter:PriceConverter}}"
                >
                </Label>

            </StackLayout>
        </Frame>

    </ContentView.Content>
</ContentView>